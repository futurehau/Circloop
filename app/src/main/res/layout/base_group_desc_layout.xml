<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/rectangle">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_desc"
            android:textColor="@drawable/textColor3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider_line">
        </View>
        <EditText
            android:id="@+id/et_group_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/textColor1"
            android:layout_gravity="center_vertical"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_delete_all_group_desc"
            android:layout_gravity="center"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:background="@drawable/edit_text_delete"></Button>
    </LinearLayout>

</RelativeLayout>