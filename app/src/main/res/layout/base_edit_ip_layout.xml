<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_ip_0"
        android:hint="255"
        android:textColorHint="#b3b0b0"
        android:gravity="center"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="3"
        android:background="@null" />
    <TextView
        android:paddingTop="7dp"
        android:layout_toRightOf="@id/et_ip_0"
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="#6c6767"/>

    <EditText
        android:layout_toRightOf="@id/text0"
        android:id="@+id/et_ip_1"
        android:hint="255"
        android:textColorHint="#b3b0b0"
        android:gravity="center"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="3"
        android:background="@null" />
    <TextView
        android:paddingTop="7dp"
        android:layout_toRightOf="@id/et_ip_1"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="#6c6767"/>

    <EditText
        android:layout_toRightOf="@id/text1"
        android:id="@+id/et_ip_2"
        android:hint="255"
        android:textColorHint="#b3b0b0"
        android:gravity="center"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="3"
        android:background="@null" />
    <TextView
        android:paddingTop="7dp"
        android:layout_toRightOf="@id/et_ip_2"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="#6c6767"/>


    <EditText
        android:layout_toRightOf="@id/text2"
        android:id="@+id/et_ip_3"
        android:hint="255"
        android:textColorHint="#b3b0b0"
        android:paddingLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="3"
        android:background="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/et_ip_3">
        <Button
            android:id="@+id/btn_delete_all"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            android:background="@drawable/edit_text_delete"></Button>
    </LinearLayout>


</RelativeLayout>
