<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_group_background"
    android:orientation="vertical">
    <include layout="@layout/base_group_name_layout"
        android:id="@+id/add_group_group_name"/>
    <include layout="@layout/base_group_desc_layout"
        android:id="@+id/add_group_group_desc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_begin"
            android:textColor="@drawable/textColor3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider_line">
        </View>
        <include layout="@layout/base_add_ip_layout"
            android:id="@+id/add_group_ip_begin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_end"
            android:textColor="@drawable/textColor3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical" />
        <View
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider_line">
        </View>
        <include layout="@layout/base_add_ip_layout"
            android:id="@+id/add_group_ip_end"/>

    </LinearLayout>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectangle">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/list_ip_seg">
            </ListView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_continue_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续添加"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/button_color_selector"
            android:textSize="15dp"
            android:background="@drawable/left_button_background"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@drawable/group_divider"></View>
        <Button
            android:paddingLeft="0dp"
            android:id="@+id/btn_finish_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成添加"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/button_color_selector"
            android:textSize="15dp"
            android:background="@drawable/right_button_background"/>
    </LinearLayout>
</LinearLayout>
