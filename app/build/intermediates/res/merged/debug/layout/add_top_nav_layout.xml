<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/add_group_nav_bar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_add_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_add_group"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="添加分组"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/textColor1"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey">
        </View>
        <RelativeLayout
            android:id="@+id/rl_add_device"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_add_device"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="添加设备"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:textColor="@drawable/textColor1"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/top_tab"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:contentDescription="tab"
        android:background="@color/divider_line"/>
</LinearLayout>
